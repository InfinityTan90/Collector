<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Collection.Pages.Collector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Collection.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Model ="using:Collection.Model"
    xmlns:Hinstance ="using:Collection.Global_var"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="36,32,36,0">
            <TextBlock Text="Audio collector"
                   Style="{StaticResource TitleTextBlockStyle}"/>

            <Grid Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <AutoSuggestBox x:ConnectionId='13'
                    x:Name="FilterText"
                    Header="Search a audio"
                    PlaceholderText="Type a name"
                    QueryIcon="Find"
                    Width="260"
                    HorizontalAlignment="Left"
                                             
                                                        />

                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="12">
                    <Button x:ConnectionId='14' 
                        Width="42"
                        Height="36"
                                       
                        ToolTipService.ToolTip="Refresh">
                        <Button.Content>
                            <FontIcon Glyph="&#xE72C;"
                                      FontSize="14"/>
                        </Button.Content>
                    </Button>
                    
                    <Button x:ConnectionId='15'
                        Width="42"
                        Height="36"
                                     
                        ToolTipService.ToolTip="Clear">
                        <Button.Content>
                            <FontIcon Glyph="&#xE8E6;"
                                      FontSize="18"/>
                        </Button.Content>
                    </Button>
                    
                    <Button x:ConnectionId='16' 
                        Width="42"
                        Height="36"
                                          
                        ToolTipService.ToolTip="Load">
                        <Button.Content>
                            <FontIcon Glyph="&#xE838;"
                                      FontSize="16"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
                
            </Grid>
            
        </StackPanel>
        
        
        <Grid 
            Grid.Row="1"
            Margin="36,28,36,36"
            CornerRadius="8"
            BorderThickness="1"
            BorderBrush="{StaticResource CardStrokeColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="310"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <ProgressBar x:ConnectionId='2'
                x:Name="ProcessStatus"
                VerticalAlignment="Bottom"
                Grid.ColumnSpan="2"
                Canvas.ZIndex="2"
                IsIndeterminate="False"
                Value="0"
                Visibility="Collapsed"/>

            <Border
                Background="{ThemeResource ControlAltFillColorSecondaryBrush}">
                <GridView x:ConnectionId='9' x:Name="VoiceTable"
                          IsItemClickEnabled="True"
                          Margin="6,6,6,6"
                          SelectionMode="Single">
                    <GridView.ItemTemplate>
                        <DataTemplate                         >
                            <Button x:ConnectionId='11'
                                Width="85"
                                Height="85"
                                              
                                                           >
                                <Button.Content>
                                    <TextBlock x:ConnectionId='12' 
                                                            
                                        FontSize="15"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        TextWrapping="Wrap"
                                        TextAlignment="Center"
                                        TextTrimming="CharacterEllipsis"/>
                                </Button.Content>
                            </Button>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                </GridView>
            </Border>

            <Border
                Grid.Column="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                BorderThickness="1,0,0,0">

                <ScrollView>
                    <Grid
                        Margin="20,20,20,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Spacing="4">
                            
                            <TextBlock 
                                Text="Name:" 
                                Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock x:ConnectionId='8' 
                                x:Name="FileName" 
                                Style="{StaticResource BodyTextBlockStyle}"/>
                        </StackPanel>

                        <StackPanel 
                            Spacing="4"
                            Grid.Row="1"
                            Margin="0,12,0,0">

                            <TextBlock 
                                Text="Path:" 
                                Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock x:ConnectionId='7' 
                                x:Name="FilePath" 
                                Style="{StaticResource BodyTextBlockStyle}"/>
                        </StackPanel>

                        <StackPanel
                            Grid.Row="2"
                            Margin="0,12,0,0"
                            Spacing="4">
                            <TextBlock 
                                Text="Match mode:"
                                Style="{StaticResource BodyStrongTextBlockStyle}"/>

                            <RadioButtons x:ConnectionId='6'
                                x:Name="MatchMode"
                                SelectedIndex="2"
                                                                   >
                                <RadioButton Content="Starts with" />
                                
                                <RadioButton Content="Ends with" />
                                
                                <RadioButton Content="Included" />
                                
                                <RadioButton Content="Precise" />
                            
                            </RadioButtons>
                        </StackPanel>

                        <StackPanel 
                            Spacing="4"
                            Grid.Row ="3"
                            Margin="0,12,0,0">

                            <TextBlock 
                                Text="Searched(Items):" 
                                Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock x:ConnectionId='5' 
                                x:Name="Nums" 
                                Style="{StaticResource BodyTextBlockStyle}"/>
                        </StackPanel>

                        <Button x:ConnectionId='3' 
                            x:Name="Play"
                            Content="Suspend"
                            Margin="0,12,0,0"
                            Grid.Row="4"
                            IsEnabled="False"
                                                     />


                        <Slider x:ConnectionId='4' 
                            x:Name="Volum"
                            Grid.Row="5"
                            Header="Volum:"
                            Maximum="100"
                            Minimum="0"
                            StepFrequency="1"
                            Value="100"
                                                       
                            Margin="0,12,0,0"/>
                        
                    </Grid>
                </ScrollView>
            </Border>
        </Grid>
    </Grid>
    
</Page>

